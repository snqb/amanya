import * as R from "remeda";
import { randomString } from "remeda";
import { createAvatar } from "@dicebear/avatars";
import * as style from "@dicebear/open-peeps";

const { title } = Astro.props;

const getAvatar = (name: string) =>
  createAvatar(style, {
    seed: name,
    rotate: 270,
    scale: 25,
    accessoriesProbability: 0.8,
    skinColor: ["variant01", "variant02", "variant03", "variant04"],
  });

/** @example [18, 30] = 18:30 */
type Time = [number, number];

/**  @example [[18, 30], [19,30]] = 18:30-19:30 */
type TimeSpan = [Time, Time];

interface Slot {
  timeSpan: TimeSpan;
  who: string;
  phone: string;
}

const names = [
  "–ß–∏–∫–∞",
  "–ê–ª–º–∞–∑",
  "–≠–º–∏—Ä",
  "–£–ª—É–∫",
  "–ë—É–ª–∞",
  "–ë–µ–∫–∞",
  "–ê–Ω–≤–∞—Ä",
  "–ó–∞–º–∏—Ä –±–∞–π–∫–µ",
  "Anish",
  "Gukesh",
  "–°–µ—Ä—ë–≥–∞",
  "–£–ª—É—à–∫–∞",
];

const slots = R.pipe(
  R.range(10, 21),
  R.map<number, Slot>((it) => ({
    timeSpan: [
      [it, 0],
      [it + 1, 0],
    ],
    who: names[it % names.length],
    phone: randomString(10),
  }))
);
