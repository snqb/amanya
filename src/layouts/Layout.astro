---
import "@fontsource/aldrich";

export interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="darkred" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div id="sticky-amanya-header-hack">
        <h1>Барбер</h1>
        <img alt="фотка" src="amanya.gif" />
        <h1>Аманя</h1>
      </div>
    </header>
    <slot />
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }
      html {
        min-height: 100vh;
        font-family: system-ui, sans-serif;
        background-color: #f6f6f6;

        scroll-padding-top: 40vh;
      }

      body {
        margin: 0;
        font-family: "Aldrich", sans-serif;
      }

      header {
        z-index: 10;
        background: url("shyrdak.jpg"), darkred;
        background-blend-mode: color-burn;
        transition: background-blend-mode 0.5s;
        background-size: cover;
        color: white;
        font-variant-caps: small-caps;

        height: var(--wrapper-size);
        position: sticky;
        top: calc(var(--difference-of-sizes) * -1);

        display: flex;
        align-items: center;
        justify-content: center;

        margin-bottom: 12px;
      }

      header h1 {
        margin: 4px;
      }

      header img {
        object-fit: cover;
        height: var(--aman-size);
      }

      header #sticky-amanya-header-hack {
        position: sticky;
        top: 0;
        height: var(--aman-size);
        display: flex;
        align-items: flex-end;
        justify-content: center;
      }
    </style>
  </body>
</html>
